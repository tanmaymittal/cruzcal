{
  "name": "cruzcal-frontend",
  "version": "0.1.0",
  "description": "CruzCal lets users select their Class and produce calendar files based on the class events they can import to their preferred calendar.",
  "author": "CruzCal Developers",
  "proxy": "http://localhost:3010/",
  "devDependencies": {
    "@testing-library/jest-dom": "*",
    "@testing-library/react": "*",
    "@testing-library/user-event": "*",
    "eslint-config-google": "*",
    "eslint-plugin-react": "*",
    "eslint-plugin-react-hooks": "*",
    "msw": "*",
    "puppeteer": "*",
    "puppeteer-core": "*",
    "react-scripts": "*"
  },
  "dependencies": {
    "prop-types": "*",
    "react": "*",
    "react-router": "5.2.1",
    "react-router-dom": "5.3.0"
  },
  "scripts": {
    "build": "react-scripts build",
    "start": "react-scripts start",
    "test": "react-scripts test --coverage  --watchAll",
    "lint": "eslint ./src/**/*.js"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)" 
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "indent": [
        "warn",
        2
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tanmaymittal/cruzcal.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tanmaymittal/cruzcal/issues"
  },
  "homepage": "https://github.com/tanmaymittal/cruzcal#readme"
}
